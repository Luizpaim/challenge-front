{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "vitest"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test"],
  "include": ["types/**/*.d.ts", "src/**/*.ts", "src/**/*.vue", "test/**/*.ts"]
}
